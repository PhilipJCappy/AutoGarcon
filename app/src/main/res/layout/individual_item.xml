<?xml version="1.0" encoding="utf-8"?><!--This XML is used for the current orders page. This page is going to display each item
of current order. They will be able to see the item name, the cost, and the customization text.-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--This text view displays the item name. -->
    <TextView
        android:id="@+id/name_of_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--This text view displays the item cost. -->
    <TextView
        android:id="@+id/cost_of_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--This text view displays the item customization text. -->
    <TextView
        android:id="@+id/customization_of_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_of_item" />

</androidx.constraintlayout.widget.ConstraintLayout>