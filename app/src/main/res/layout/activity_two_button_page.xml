<?xml version="1.0" encoding="utf-8"?>

<!-- xml layout that appears after logging in/loading screen where the user can
     choose to navigate to the QR code activity or home activity -->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="auto_garcon.initialpages.TwoButtonPage">

    <!-- image of logo for auto-garcon -->

    <!-- scanner button -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="343dp"
        android:layout_height="179dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scanner_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="28dp"
        android:background="@color/colorPrimary"
        android:elevation="5555dp"
        android:text="QR Code Scanner \n (QR Code Provided by Restaurant)"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/fav_button"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- home button -->
    <Button
        android:id="@+id/fav_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="72dp"
        android:background="@color/colorPrimary"
        android:text="Favorites Page"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
