<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="end"
    android:id="@+id/shopping_cart_main"
    tools:context=".ShoppingCart">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/xml_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/nav_header_background"/>

        <Button
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="70dp"
            android:layout_toStartOf="@+id/order_history_button"
            android:text="@string/home"
            android:textSize="14sp"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="goHome"/>

        <Button
            android:id="@+id/order_history_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/cart_button"
            android:text="@string/order_history"
            android:textColor="@color/white"
            android:textSize="14sp"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="goOrderHistory"/>

        <Button
            android:id="@+id/cart_button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="@string/cart"
            android:textColor="@color/white"
            android:textSize="14sp"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="goShoppingCart"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginStart="150dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="shopping cart" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_header"
        android:layout_gravity="start"
        android:background="@color/white"/>

</androidx.drawerlayout.widget.DrawerLayout>
