<?xml version="1.0" encoding="utf-8"?>

<!-- xml layout for menu items on the menu activity -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- text that gets updated at runtime to display name of the menu item -->
    <TextView
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_item"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:textSize="14sp"/>

    <!-- text that gets updated at runtime to display price of the menu item -->
    <TextView
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_price"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginLeft="245dp"
        android:paddingEnd="10dp"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:gravity="right"
        android:textSize="14sp"/>

</RelativeLayout>