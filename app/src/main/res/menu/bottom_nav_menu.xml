<?xml version="1.0" encoding="utf-8"?>
<!--- This file is for the bottom navigation bar. This will be placed on the
bottom of the menu page, the cart page, the QR page, and the favorites page.
This will allow the user to easily transition from the current page they are on
to either the cart, the favorites page, or the QR code scanner page.-->
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!---QR-code button that directs you to the QR code scanner page. -->
    <item
        android:id="@+id/action_scan"
        android:enabled="true"
        android:theme="@style/Theme.MyApp"
        android:icon="@drawable/ic_qr_scan"
        android:title="QR Scan"
        app:showAsAction="ifRoom" />

    <!---Home button that directs you to the favorites page. -->
    <item
        android:id="@+id/action_home"
        android:enabled="true"
        android:theme="@style/Theme.MyApp"
        android:icon="@drawable/ic_home"
        android:title="Home"
        app:showAsAction="ifRoom" />

    <!---Cart button that directs you to the cart page. -->
    <item
        android:id="@+id/action_cart"
        android:enabled="true"
        android:icon="@drawable/ic_cart"
        android:theme="@style/Theme.MyApp"
        android:title="Cart"
        app:actionLayout="@layout/action_item_layout"
        app:showAsAction="ifRoom" />
</menu>