<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.auto_garcon">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/small_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="auto_garcon.SendErrorEmail"></activity>
        <activity android:name="auto_garcon.ExceptionHandler" />
        <activity android:name="auto_garcon.cartorderhistory.CurrentOrders" />
        <activity android:name="auto_garcon.accountstuff.PasswordChange" />
        <activity android:name="auto_garcon.initialpages.TwoButtonPage" />
        <activity android:name="auto_garcon.accountstuff.Privacy" />
        <activity android:name="auto_garcon.accountstuff.Terms" />
        <activity android:name="auto_garcon.accountstuff.Faq" />
        <activity android:name="auto_garcon.initialpages.LoadingScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="auto_garcon.cartorderhistory.OrderHistory" />
        <activity android:name="auto_garcon.cartorderhistory.ShoppingCart" />
        <activity android:name="auto_garcon.accountstuff.Account" />
        <activity android:name="auto_garcon.accountstuff.Settings" />
        <activity android:name="auto_garcon.menustuff.Menu" />
        <activity android:name="auto_garcon.initialpages.Register" />
        <activity android:name="auto_garcon.initialpages.Login" />
        <activity
            android:name="auto_garcon.homestuff.Home"
            android:windowSoftInputMode="adjustNothing" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3180674783074402~6809677430" /> <!-- This is for the Qr code -->
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />

        <activity android:name="auto_garcon.initialpages.QRcode" />
    </application>

</manifest>